{
    "name": "@acaldas/powerhouse",
    "version": "1.0.3",
    "main": "index.js",
    "license": "AGPL-3.0-only",
    "private": false,
    "bin": "./dist/scripts/cli.js",
    "files": [
        "/dist"
    ],
    "scripts": {
        "codegen": "npx ts-node --transpile-only .hygen/run.ts",
        "graphql-codegen": "patch-package && graphql-codegen --config scripts/graphql-codegen.ts",
        "clean": "rimraf dist/",
        "copy-files": "copyfiles .hygen/templates/**/*.esm.t dist/",
        "build": "yarn clean && tsc && yarn copy-files"
    },
    "dependencies": {
        "@acaldas/graphql-codegen-typescript-validation-schema": "^0.12.3",
        "@graphql-codegen/cli": "^5.0.0",
        "@graphql-codegen/typescript": "^4.0.1",
        "@powerhouse/document-model": "../document-model",
        "@types/node": "^20.5.9",
        "change-case": "^4.1.2",
        "hygen": "^6.2.11",
        "ts-node": "^10.9.1",
        "typescript": "^5.2.2"
    },
    "devDependencies": {
        "copyfiles": "^2.4.1",
        "graphql": "^16.8.0",
        "prettier": "^3.0.3",
        "prettier-plugin-organize-imports": "^3.2.3",
        "rimraf": "^5.0.1"
    },
    "peerDependencies": {
        "graphql": "^16.8.0"
    }
}
